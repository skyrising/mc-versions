{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://skyrising.github.io/mc-versions/schemas/version_manifest.json",
    "$defs": {
        "version": {
            "description": "A version in the Omniarchive format",
            "type": "string",
            "pattern": "^(((server-)?([abc]|inf?-|rd-|af-)?[0-9]+[.0-9]*)|[0-9]{2}w[0-9]{2}[a-z~])a?([_-][0-9a-z]+)*$"
        },
        "releaseType": {
            "description": "A release type (e.g. release, snapshot, etc.)",
            "type": "string",
            "pattern": "^[a-z_]+$",
            "examples": ["release", "snapshot", "old_alpha", "old_beta"]
        }
    },
    "type": "object",
    "properties": {
        "$schema": {"type": "string", "format": "uri"},
        "latest": {
            "type": "object",
            "patternProperties": {
                "^[a-z_]+$": {"$ref": "#/$defs/version"}
            },
            "additionalProperties": false
        },
        "versions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"$ref": "#/$defs/version"},
                    "type": {"$ref": "#/$defs/releaseType"},
                    "releaseTime": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The time this version was released"
                    },
                    "time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The time at which the manifest referenced in `url` was generated"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri-reference"
                    },
                    "sha1": {
                        "type": "string",
                        "pattern": "^([A-Fa-f0-9]{40})$",
                        "description": "SHA1-Hash of the generated manifest referenced in `url`"
                    },
                    "details": {
                        "type": "string",
                        "format": "uri-reference"
                    },
                    "detailsHash": {
                        "type": "string",
                        "pattern": "^([A-Fa-f0-9]{40})$",
                        "description": "SHA1-Hash of the generated `details`"
                    }
                },
                "required": ["id", "omniId", "type", "releaseTime", "details", "detailsHash"]
            }
        },
        "additionalProperties": false
    }
}